@model IEnumerable<CapStoneProject.Models.ScanLog>
@{
    ViewData["Title"] = "History";
}

<h2>Audit History</h2>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Target IP</th>
            <th>Date</th>
            <th>Open Ports</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.LogID</td>
                <td>@log.TargetIPAddress</td>
                <td>@log.ScanTimestamp</td>
                <td>@log.OpenPortsDetected</td>
            </tr>
        }
        <tr>
            <td>0</td>
            <td>127.0.0.1</td>
            <td>@DateTime.Now</td>
            <td>80, 443 (Demo)</td>
        </tr>
    </tbody>
</table>