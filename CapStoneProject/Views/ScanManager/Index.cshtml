@model IEnumerable<CapStoneProject.Models.ScanLog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TargetIPAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScanTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenPortsDetected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScanDurationMs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TargetIPAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScanTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenPortsDetected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScanDurationMs)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LogID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LogID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LogID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
